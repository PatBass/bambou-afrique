{% extends "::Layout/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Confirmation de l'inscription - {{ parent() }}{% endblock %}
{% block fos_user_content %}
    {% block header %}
        {% include('MainBundle:Common:header.html.twig') with { active :''} %}
    {% endblock %}
    {% block content %}
        <div class="container-fluid" style="position: relative; top:50px;">
            <div class="col-sm-offset-1 col-sm-10">
                <div class="panel panel-default">
                    <div class="panel-body" id="">
                        <div class="row">
                            <div class="col-sm-2">
                                <img src="{{ asset('bundles/main/images/ok.jpg') }}" width="90%" height="90%" >
                            </div>
                            <div class="col-sm-offset-3 col-sm-6" >
                                <p style="margin-top: 50px;"> {{ 'registration.confirmed'|trans({'%username%': user.firstName}) }}!</p>
                                {% if app.session is not empty %}
                                    {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
                                    {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>{% endif %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <a href="{{ path('fos_user_profile_show') }}" class="btn btn-default"><i class="glyphicon glyphicon-user"></i> Voir le profil</a>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}
