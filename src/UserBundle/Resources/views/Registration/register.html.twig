{% extends "::Layout/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Inscription - {{ parent() }} - Casablanca{% endblock %}
{% block body %}
    {% include('MainBundle:Common:header.html.twig') with { active: ''} %}


    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="top100"><br /><br /><br /></div>
            <h2 class="aligned-center"><i class="glyphicon glyphicon-pencil"></i> S'inscrire</h2>
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="row" >
                            <div class="col-sm-10 col-sm-offset-1 alert alert-danger" style="text-align: center;border: 1px solid crimson;display: none;">

                                <button type="button" data-toggle="tooltip" data-placement="top" title="Close" class="close" data-dismiss="alert">&times;</button>
                                <div id="errorForm">{{ form_errors(form) }}</div>

                            </div>
                            <div class="col-sm-1"></div>
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.gender) }}
                            {{ form_errors(form.gender) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.firstname,  {'attr': {'name':'fos_user_registration_form[firstName]', 'required':'required','id':'fos_user_registration_form_firstName','maxlength':'50','placeholder':'Votre prénom', 'title':'Votre prénom', 'class':'form-control'}}) }}
                            <p class="help-block text-danger" style="color: red;">{{ form_errors(form.firstname) }}</p>
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.lastname,  {'attr': {'name':'fos_user_registration_form[lastName]','required':'required','id':'fos_user_registration_form_lastName','maxlength':'50','placeholder':'Votre nom', 'title':'Votre nom', 'class':'form-control'}}) }}
                            <p class="help-block text-danger" style="color: red;">{{ form_errors(form.lastname) }}</p>
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.email,  {'attr': {'name':'fos_user_registration_form[email]', 'required':'required','id':'fos_user_registration_form_email','maxlength':'30','placeholder':'Votre email', 'title':'Votre adresse email', 'class':'form-control'}}) }}
                            <p class="help-block text-danger" style="color: red;">{{ form_errors(form.email) }}</p>
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.birthday,  {'attr': {'name':'fos_user_registration_form[birthday]','id':'fos_user_registration_form_birthday','maxlength':'255','placeholder':'Date de naissance', 'title':'Date de naissance', 'class':'form-control date_format'}}) }}
                            <p class="help-block text-danger" style="color: red;">{{ form_errors(form.birthday) }}</p>
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.nationality,  {'attr': {'name':'fos_user_registration_form[nationality]','id':'fos_user_registration_form_nationality','maxlength':'30', 'placeholder':'Nationalité', 'title':'Nationalité', 'class':'form-control'}}) }}
                            <p class="help-block text-danger" style="color: red;">{{ form_errors(form.nationality) }}</p>
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.phone,  {'attr': {'name':'fos_user_registration_form[phone]', 'required':'required','id':'fos_user_registration_form_phone','maxlength':'12', 'placeholder':'Téléphone', 'title':'Téléphone', 'class':'form-control'}}) }}
                            <p class="help-block text-danger" style="color: red;">{{ form_errors(form.phone) }}</p>
                        </div>
                        <div class="form-group" style="color: red;">
                            <input type="password" class="form-control" id="fos_user_registration_form_plainPassword_first" placeholder="Password" name="fos_user_registration_form[plainPassword][first]" required="required" />
                            {{ form_errors(form.plainPassword) }}
                        </div>
                        <div class="form-group" style="color: red;">
                            <input class="form-control" type="password" id="fos_user_registration_form_plainPassword_second" placeholder="Type in your password again" name="fos_user_registration_form[plainPassword][second]" required="required" />
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-2">
                                    {{ form_widget(form.address.streetnumber,  {'attr': {'name':'fos_user_registration_form[streetnumber]','id':'fos_user_registration_form_streetnumber','placeholder':'Nº', 'title':'Nº', 'class':'form-control'}}) }}
                                    <p class="help-block text-danger" style="color: red;">{{ form_errors(form.address.streetnumber) }}</p>
                                </div>
                                <div class="col-sm-2">
                                    {{ form_widget(form.address.streetextension,  {'attr': {'name':'fos_user_registration_form[streetextension]','id':'fos_user_registration_form_streetextension','maxlength':'50','class':'form-control'}}) }}
                                    <p class="help-block text-danger" style="color: red;">{{ form_errors(form.address.streetextension) }}</p>
                                </div>
                                <div class="col-sm-2">
                                    {{ form_widget(form.address.streettype,  {'attr': {'name':'fos_user_registration_form[streettype]','id':'fos_user_registration_form_streettype','maxlength':'50','placeholder':'Type de voie', 'title':'Type de voie', 'class':'form-control'}}) }}
                                    <p class="help-block text-danger" style="color: red;">{{ form_errors(form.address.streettype) }}</p>
                                </div>
                                <div class="col-sm-6">
                                    {{ form_widget(form.address.streetname,  {'attr': {'name':'fos_user_registration_form[streetname]','id':'fos_user_registration_form_streetname','maxlength':'50','placeholder':'Nom de la voie', 'title':'Nom de la voie', 'class':'form-control'}}) }}
                                    <p class="help-block text-danger" style="color: red;">{{ form_errors(form.address.streetname) }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4">
                                <a href="{{ path('fos_user_security_login') }}">J'ai déjà un compte</a>
                            </div>
                            {{ form_row(form._token) }}
                            <div class="col-sm-offset-4 col-sm-4">
                                <input type="submit" class="form-control btn btn-color" value="Valider" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-sm-3"></div>
    </div>
{% endblock %}
{% block footer %}
    {% include('MainBundle:Common:footer.html.twig') %}
{% endblock %}
{% block javascripts %}
    <script src=""></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $(".date_format").mask("99/99/9999");
            $(".zipcode_format").mask("99999");
            $('input[type="date"]').prop('type','text');
        });
    </script>
{% endblock %}
