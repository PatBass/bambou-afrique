{% extends 'AFMPUserBundle:Layout:offline_layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
	<h1><span class="fa fa-cog"></span> Réinitialisez votre mot de passe</h1>
	{% trans_default_domain 'FOSUserBundle' %}
	<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
	    {{ form_widget(form._token) }}
	    <div class="small-6 columns" style="padding-left: 0px;">{{ form_widget(form.plainPassword.first, { 'attr': { 'placeholder': 'Mot de passe ...' } }) }}</div>
	    <div class="small-6 columns" style="padding-right: 0px;">{{ form_widget(form.plainPassword.second, { 'attr': { 'placeholder': 'Vérification ...' } }) }}</div>
	    <br class="clear">
	    <div class="ecart10"></div>
	    <p style="text-align: right; margin: 0px;">
	        <input class="red_button" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
	    </p>
	</form>
{% endblock %}